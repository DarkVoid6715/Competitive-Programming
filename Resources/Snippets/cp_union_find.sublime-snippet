<snippet>
	<content>
<![CDATA[struct union_find{
	vector<int> par;
	void init(int n) { par.resize(n, -1); }
	int size(int x) { return -par[find(x)]; }
	int find(int x){
		return (par[x] < 0) ? x : par[x] = find(par[x]);
	}
	void unite(int a, int b){
		a = find(a), b = find(b);
		if(a == b) return;
		if(size(a) < size(b)) swap(a, b);
		par[a] += par[b];
		par[b] = a;
	}
};]]>	
	</content>
	<tabTrigger>cp_union_find</tabTrigger>
	<description>Union-Find</description>
</snippet>